APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=erp_system
DB_USERNAME=root
DB_PASSWORD=secret

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=ChangeMeReplaceWithSecureRandom
JWT_ALGO=HS256
JWT_ACCESS_EXPIRE=900           # seconds (15 minutes)
JWT_REFRESH_EXPIRE=604800      # seconds (7 days)

# Mail (optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM=admin@example.com

# App
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=password

# Notifications
SLACK_WEBHOOK_URL=

# Audit export scheduling
AUDIT_EXPORT_SCHEDULE_ENABLE=true
AUDIT_EXPORT_DAILY_RANGE_DAYS=1
AUDIT_EXPORT_RETENTION_DAYS=30
AUDIT_EXPORT_COLUMNS=id,action,user_id,model,model_id,before_data,after_data,ip,created_at

# App key used to encrypt sensitive settings. Generate with: php -r "echo bin2hex(random_bytes(32));"
APP_KEY=ChangeMeReplaceWithSecureRandom

